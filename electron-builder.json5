// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "YourAppID",
  "asar": true,
  "productName": "transcriptor",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "!python/venv/**/*",
    "!python/dist/**/*",
    "!python/build/**/*",
    "!python/transcription.py",
    "!python/transcription.spec"
  ],
  "extraResources": [
    {
      "from": "python/dist/transcription.exe",
      "to": "python/dist/transcription.exe"
    },
    {
      // Incluye FFmpeg en una subcarpeta 'bin'
      "from": "python/bin/ffmpeg.exe",
      "to": "python/bin/ffmpeg.exe"
    },
    {
      "from": "python/audios",
      "to": "python/audios"
    }
  ],
  "mac": {
    "target": [
      "dmg"
    ],
    "artifactName": "${productName}-Mac-${version}-Installer.${ext}"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "signAndEditExecutable": false,
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "artifactName": "${productName}-Linux-${version}.${ext}"
  }
}
